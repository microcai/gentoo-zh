+/* UTF-8 support */
+void
+preconvert(char *input, char *output, int n_char)
+{
+	if (chewing_codeset == XCIN_BYTE_UTF8) {
+		const char *inptr = input;
+		size_t inbytesleft = n_char;
+		size_t outbytesleft = n_char / 2 * 3 + 1;
+
+		char *outptr = output;
